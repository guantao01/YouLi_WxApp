# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password
DB_DATABASE=youli_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# WeChat Mini Program Configuration
WECHAT_APPID=your_wechat_appid
WECHAT_SECRET=your_wechat_secret

# Tencent Map API
TENCENT_MAP_KEY=your_tencent_map_api_key

# Logistics API (示例: 快递100)
LOGISTICS_API_KEY=your_logistics_api_key
LOGISTICS_API_URL=https://poll.kuaidi100.com/poll/query.do

# Payment Configuration (微信支付)
WECHAT_PAY_MCHID=your_merchant_id
WECHAT_PAY_KEY=your_payment_key
WECHAT_PAY_CERT_PATH=/path/to/cert.pem

# Server Configuration
PORT=3000
NODE_ENV=development

# Auto-confirm orders after 7 days (in milliseconds)
AUTO_CONFIRM_DAYS=7
